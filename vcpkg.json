{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "vulkan-game",
  "version": "1.0.0",
  "dependencies": [
    {
      "name": "sdl3",
      "default-features": false,
      "features": ["vulkan"],
      "platform": "!linux"
    },
    {
      "name": "sdl3",
      "default-features": false,
      "features": ["vulkan", "x11"],
      "platform": "linux"
    },
    {
      "name": "dbus",
      "default-features": false,
      "platform": "linux"
    },
    "vulkan",
    "vulkan-headers",
    "glm",
    "stb",
    "vk-bootstrap",
    "vulkan-memory-allocator",
    {
      "name": "joltphysics",
      "features": ["debugrenderer", "rtti"]
    },
    "spirv-reflect",
    {
      "name": "glslang",
      "features": ["tools"]
    },
    {
      "name": "imgui",
      "features": ["sdl3-binding", "vulkan-binding", "docking-experimental"]
    },
    "fastgltf",
    "openfbx",
    "lodepng",
    "nlohmann-json",
    "tinyexr",
    "miniz",
    "libarchive",
    "entt",
    "doctest"
  ]
}
